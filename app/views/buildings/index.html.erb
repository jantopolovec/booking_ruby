<%= form_tag(buildings_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search Buildings", class:"form-control mr-sm-2" %>
  <%= submit_tag "Search", class:"btn btn-outline-success my-2 my-sm-0" %>
<% end %>
<h1>Stavbe</h1>

<table>
  <thead>
    <tr>
      <th>Ime</th>
      <th>Zvezdice</th>
      <th>Opis</th>
      <th>Naslov</th>
      <th>Kraj</th>
      <th>Tip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= building.ime %></td>
        <td><%= building.zvezdice %></td>
        <td><%= building.opis %></td>
        <td><%= building.naslov %></td>
        <td><%= building.kraj %></td>
        <td><%= building.tip %></td>
        <td><%= link_to 'Show', building %></td>
      <!-- <td><%= link_to 'Edit', edit_building_path(building) %></td> 
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if defined?(current_user.id) %>
<%= link_to 'Nova stavba', new_building_path %>
<% end %>