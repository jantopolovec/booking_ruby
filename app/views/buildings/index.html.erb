<h1>Stavbe</h1>

<table>
  <thead>
    <tr>
      <th>Ime</th>
      <th>Zvezdice</th>
      <th>Opis</th>
      <th>Naslov</th>
      <th>Kraj</th>
      <th>Tip</th>
      <th>Slika</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
        <td><%= link_to building do %><%= building.ime %><%end%></td>
        <td><%= building.zvezdice %></td>
        <td><%= building.opis %></td>
        <td><%= building.naslov %></td>
        <td><%= building.kraj %></td>
        <td><%= building.tip %></td>
        
      <!-- <td><%= link_to 'Edit', edit_building_path(building) %></td> 
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>-->
      
      
      <% if building.image.attached? %>
      <%y=1%>
       <% building.image.each do |image| %>
        <%if y==1%>
         <td> <%= link_to building do %><%= image_tag(image, :className => "", :style => "width:50%") %><%end%></td> 
         </tr> 
      <% end %>
      <%y=2%>
    <% end %>
   <% end %>
<% end %>
  </tbody>
</table>


<br>

<% if defined?(current_user.id) %>
<%= link_to 'Nova stavba', new_building_path %>
<% end %>