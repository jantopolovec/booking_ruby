
<h1>Reservations</h1>

<table>
  <thead>
    <tr>
      <th>Od</th>
      <th>Do</th>
      <th>User</th>
      <th>Room</th>
      <th>Osebe</th>
      <th>Cena</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reservations.each do |reservation| %>
      <tr>
      <% if reservation.od > reservation.do %>
        <td><%= reservation.do %></td>
        <td><%= reservation.od %></td>
      <% else %>
      <td><%= reservation.od %></td>
        <td><%= reservation.do %></td>
      <% end %>
        <td><%= reservation.user_id %></td>
        <td><%= reservation.room_id %></td>
        <td><%= reservation.osebe %></td>
        <td><%= reservation.cena * reservation.osebe %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

